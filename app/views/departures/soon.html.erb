<% content_for :javascript do %>
  <%= javascript_include_tag "jquery-1.4.2.min" %>
  <%= javascript_include_tag "narrow-search" %>
  <%= javascript_include_tag "http://code.google.com/apis/gears/gears_init.js" %>
  <%= javascript_include_tag "geo" %>
<% end %>

